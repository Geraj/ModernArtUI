<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="myapp.modernartui.MainActivity"    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.67">

                    <View
                        android:id="@+id/one"
                        android:background="@color/one"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        />
                    <View
                        android:id="@+id/two"
                        android:background="@color/two"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1.40"
                        />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.20">

                    <View
                        android:id="@+id/threea"
                        android:background="@color/three"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        />

                    <View
                        android:background="@android:color/white"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                    <View
                        android:background="@color/three"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/threeb" />
                    <View
                        android:background="@color/four"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:id="@+id/four" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                    <View
                        android:background="@android:color/darker_gray"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1.41"
                        />

                    <View
                        android:background="@color/five"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:id="@+id/five" />

            </LinearLayout>

            <SeekBar
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:id="@+id/seekBar"
                android:layout_weight="0.20" />
    </LinearLayout>


</RelativeLayout>
